<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BestForecast" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFEB3B</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

    <style name="StartScreenButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">#FFEB3B</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_color</item>
        <item name="helperTextTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>

    </style>

    <style name="InputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>

    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textSize">14sp</item>
    </style>
</resources>