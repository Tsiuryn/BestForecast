<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:left_swipe_enabled="true"
    app:right_swipe_enabled="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="24sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/vDelete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#CCFF4444"
        android:src="@drawable/ic_delete"
        app:gravity="right"
        tools:ignore="MissingPrefix" />

    <ImageButton
        android:id="@+id/vDefault"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="#CC8BC34A"
        android:src="@drawable/ic_save"
        app:gravity="left"
        tools:ignore="MissingPrefix" />
</ru.rambler.libs.swipe_layout.SwipeLayout>